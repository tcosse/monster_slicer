      data-game-last-save-mc-value="<%= [] %>"
    <% else %>
      data-game-last-save-mc-value="<%= [@last_save.x.to_i, @last_save.y.to_i, @last_save.health.to_i, @last_save.score.to_i] %>"
    <% end %>
    data-game-coin-sound-value="<%= audio_path("coin.mp3")%>"
    data-game-heal-sound-value="<%= audio_path("heal.mp3")%>"
    data-game-wilhelm-sound-value="<%= audio_path("wilhelm.mp3")%>"
